<%= form_for @topic do |f| %>
    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :url %><br />
      <%= f.text_field :url, class: "form-control" %>
    </div>

    <%= f.submit "Create New Topic", class: "btn btn-primary" %>
<% end %>
