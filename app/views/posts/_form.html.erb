<%= form_for [@topic, @post] do |f| %>
    <div class="form-group">
      <%= f.label :title %><br />
      <%= f.text_field :title, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :body %><br />
      <%= f.text_area :body, class: "form-control" %>
    </div>

    <%= f.submit "Create New post", class: "btn btn-primary" %>
<% end %>
